{
  "manifest_version": 2,
  "name": "Image-Copy-Shortcut",
  "version": "1.0",
  "description": "Copies an image under the mouse when pressing Ctrl+Alt+P",
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}

